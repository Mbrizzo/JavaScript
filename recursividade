=============JS================
'user strict';
function contarElefante(min,max){
	document.write(min + "elefate incomoda muito a gente <br>")
	if (min < max){
		contarElefante(++min, max)
			if ((min % 2) == 0){
			document.write(min + 'elefantes ' + 'incomodam '.repeat(min)  + ' muito mais <br>')
			} else if ((min % 2) != 0){
			document.write(min + 'elefantes incomodam muito a gente <br>')
		}
		
	}
}
contarElefante(1,10);



